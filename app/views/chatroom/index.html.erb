<h2 class="ui center medium aligned icon header">
  <i class="circular blue users icon"></i>
  Interact with your friends
</h2>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui medium feed" id="message-container">        
          <%= render @messages %>
        </div>
      </div>
      <div class=" extra content">
        <%= form_with(model: @message, url: message_path, class: "ui reply form") do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: 'Enter a message ...' %>
              <%= f.submit 'Send', class: "ui blue small button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>